.col-md-5.devise-box
  .panel.panel-default
    .panel-heading.devise-title
      %b Registrar-se
    .panel-body
      = simple_form_for(resource, as: resource_name ,url: registration_path(resource_name)) do |f|
        = f.error_notification
        .form-inputs
          .row
            .col-xs-10.col-xs-offset-1
              = f.input :email, required: true, autofocus: true
          .row
            .col-xs-10.col-xs-offset-1
              = f.input :password, required: true
          .row
            .col-xs-10.col-xs-offset-1
              = f.input :password_confirmation, required: true
          .row
            .col-xs-10.col-xs-offset-1
              = f.button :submit, "Registrar Usuário",class: "btn btn-lg btn-success btn-block"
          .row
            .col-xs-4.col-xs-offset-7.devise-links-container
              = link_to "Iniciar Sessão", new_session_path(resource_name)

