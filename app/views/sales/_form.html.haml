= form_for @sale do |f|
  - if @sale.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sale.errors.count, "error")} prohibited this sale from being saved:"
      %ul
        - @sale.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :purchaser_name
    = f.text_field :purchaser_name
  .field
    = f.label :item_description
    = f.text_field :item_description
  .field
    = f.label :item_price
    = f.text_field :item_price
  .field
    = f.label :purchase_count
    = f.text_field :purchase_count
  .field
    = f.label :merchant_address
    = f.text_field :merchant_address
  .field
    = f.label :merchant_name
    = f.text_field :merchant_name
  .actions
    = f.submit 'Save'
