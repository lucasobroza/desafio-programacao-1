%h3
  %strong Descrição da Venda:
  = @sales_report.description

%hr

%table.table.table-striped
  %thead
    %tr
      %th Nome do Comprador
      %th Descrição do Item
      %th Preço
      %th Quantidade
      %th Endereço do Comerciante
      %th Nome do Comerciante
      %th Total da Compra

  %tbody
    - @sales_report.sales.each_with_index do |sale, index|
      %tr
        %td= sale.purchaser_name
        %td= sale.item_description
        %td= number_to_currency(sale.item_price)
        %td= sale.purchase_count
        %td= sale.merchant_address
        %td= sale.merchant_name
        %td= number_to_currency(sale.sale_total_value.to_d)
    %tr
      %td{colspan: 5}
      %td
        %b
          Valor Total:
      %td
        = number_to_currency(@sales_report.total_of_sales)
.row
  .col-xs-1
    = link_to 'Voltar', sales_reports_path

